//calculator making simple way//
#include<iostream>
using namespace std;
class Calculator{
private:
    int a=4;
    int b=3;
    public:
    int add(){
        int sum=a+b;
        return sum;
    }
    int subtract(){
        int sub=a-b;
        return sub;
    }
    int multiply(){
       int  mul=a*b;
        return mul;
    }
    double divide(){
        double a=4.0;
        double b=3.0;
        double div=a/b;
        return div;
    }
    };
    int main(){
        Calculator obj1;
        cout<<obj1.add()<<endl;
        cout<<obj1.subtract()<<endl;
        cout<<obj1.multiply()<<endl;
        cout<<obj1.divide()<<endl;

        return 0;
    }
